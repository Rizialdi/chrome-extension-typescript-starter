{
  "manifest_version": 2,

  "name": "Vinted Placard Malin",
  "description": "Une extension Chrome qui vous facilite pleinement la vie. Activez la, vendez plus et devenez un Influencer sur Vinted.",
  "version": "0.0.1",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/vendor.js", "js/content_script.js"]
  }],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}